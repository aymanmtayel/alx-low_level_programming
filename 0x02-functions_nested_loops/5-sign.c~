#include "main.h"

/**
 *print_sign - check for a number sign
 *@n: number to be checked
 *Return: 0 ifzero and 1 if positive and -1 for begative
 */
int print_sign(int n)
{
  if (n > 0)
    {
      _putchar('+');
      return (1);
    }
  else if (n < 0)
    {
      _putchar(45);
      return (-1);
    }
  else
    {
      _putchar(48);
      return (0);
    }
}
